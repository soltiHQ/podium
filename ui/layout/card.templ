package layout

templ Card(title string) {
	<div class="bg-white rounded-xl border border-gray-200 shadow-sm p-5">
		if title != "" {
			<h3 class="text-lg font-semibold text-gray-900 mb-4">
				{ title }
			</h3>
		}
		<div class="space-y-2 text-sm text-gray-700">
			{ children... }
		</div>
	</div>
}