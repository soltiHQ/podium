package card

templ Block(title string) {
	<div
		class="
			w-full
			rounded-[var(--r-6)]
			border border-border/70
			bg-card
			p-5
			space-y-4
			shadow-sm
		"
	>
		if title != "" {
			<div class="text-xs font-mono uppercase tracking-[0.12em] text-muted-strong">
				{ title }
			</div>
		}

		{ children... }
	</div>
}