package button

templ Link(label string, href string, fullWidth bool, variant Variant) {
	{{
		width := ""
		if fullWidth { width = "w-full " }

		base := "inline-flex items-center justify-center gap-2 " +
			"h-10 px-4 " +
			"transition-all duration-200 " +
			width

		className := base + radiusFor(variant) + styleFor(variant, true) + focusFor(variant)
	}}

	<a href={ href } class={ className }>
		{ children... }
		<span>{ label }</span>
	</a>
}