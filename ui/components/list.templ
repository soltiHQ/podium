package components

templ List(emptyMessage string, hasItems bool) {
	if !hasItems {
		<div class="bg-white border border-dashed border-gray-300 rounded-xl p-10 text-center text-sm text-gray-500">
			{ emptyMessage }
		</div>
	} else {
		<div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
			{ children... }
		</div>
	}
}